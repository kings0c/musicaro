{
    "manifest_version": 2,

    "name": "Musicaro",
    "description": "Music player for chrome.",
    "version": "0.1",

    "browser_action": {
        "default_icon": "image/icon.png",
        "default_popup": "index.htm",
        "default_title": "Music player for Chrome."
    },
    "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
    ],
    "content_scripts": [
        {
            "matches": ["http://www.google.com/*"],
            "css": ["css/style.css"],
            "js": ["js/jquery.min.js", "js/materialize.min.js", "js/id3-minimized.js", "js/main.js"]
    }
    ]
}
